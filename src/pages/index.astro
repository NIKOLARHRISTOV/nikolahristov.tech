---
import Base from "@layouts/Base.astro";
---

<Base>
	<div class="flex flex-col">
		<main class="flex grow justify-center">
			<div class="flex grow self-center">
				<div class="container mt-16 pt-96 sm:pb-36">
					<div class="flex justify-center">
						<picture class="mx-8 block">
							<source
								srcset="/img/pages/index/rakuten-full.svg"
								media="(prefers-color-scheme: dark)"
							/>
							<img
								width="260"
								src="/img/pages/index/rakuten-full.svg"
								alt="Rakuten"
								loading="lazy"
							/>
						</picture>

						<picture class="mx-8 block">
							<source
								srcset="/img/pages/index/meta-full.svg"
								media="(prefers-color-scheme: dark)"
							/>
							<img
								width="260"
								src="/img/pages/index/meta-full.svg"
								alt="Meta"
								loading="lazy"
							/>
						</picture>

						<picture class="mx-8 block">
							<source
								srcset="/img/pages/index/discord-full.svg"
								media="(prefers-color-scheme: dark)"
							/>
							<img
								width="260"
								src="/img/pages/index/discord-full.svg"
								alt="Discord"
								loading="lazy"
							/>
						</picture>
					</div>
				</div>
			</div>
		</main>
	</div>
</Base>
