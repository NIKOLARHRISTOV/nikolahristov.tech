---
import Base from "@layouts/Base.astro";

import "github-markdown-css";

export const getStaticPaths = async () =>
	["astro-compress", "astro-critters", "astro-rome", "NikolaRHristov"].map(
		(slug) => ({
			params: { slug },
		})
	);

const slug =
	typeof Astro.params["slug"] === "string" ? Astro.params["slug"] : "";

const Readme = (await import(`../raw/readmes/${slug}/index.astro`)).default;
---

<Base>
	<div class="container">
		<div class="markdown-body">
			<Readme />
		</div>
	</div>
</Base>
